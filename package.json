{
  "name": "talentalign-ai",
  "version": "1.0.0",
  "description": "Ethical AI-powered hiring platform for fair and transparent recruitment",
  "private": true,
  "scripts": {
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "start": "node api/index.js",
    "build": "npm run build:frontend",
    "build:vercel": "npm run install:all && npm run build:frontend",
    "build:backend": "echo 'Backend build skipped for Vercel serverless'",
    "build:frontend": "cd frontend && npm install && npm run build",
    "server:dev": "cd backend && npm run dev",
    "client:dev": "cd frontend && npm start",
    "test": "npm run test:frontend",
    "test:backend": "echo 'Backend tests skipped for Vercel'",
    "test:frontend": "cd frontend && npm test -- --watchAll=false",
    "lint": "npm run lint:frontend",
    "lint:backend": "echo 'Backend lint skipped for Vercel'",
    "lint:frontend": "cd frontend && npm run lint",
    "deploy:vercel": "./scripts/deploy-vercel.sh",
    "setup:db": "./scripts/setup-database.sh",
    "quick:deploy": "./scripts/quick-deploy.sh"
  },
  "keywords": [
    "ai",
    "hiring",
    "ethics",
    "bias-detection",
    "recruitment",
    "fairness",
    "transparency"
  ],
  "author": "TalentAlign AI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/talentalign-ai.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/talentalign-ai/issues"
  },
  "homepage": "https://talentalign-ai.com",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "backend",
    "frontend"
  ]
}