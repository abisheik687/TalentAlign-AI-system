{
  "version": 2,
  "name": "talentalign-ai-simple",
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://talentalign-backend.herokuapp.com/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/$1"
    }
  ],
  "build": {
    "env": {
      "REACT_APP_API_URL": "https://talentalign-backend.herokuapp.com/api",
      "REACT_APP_NAME": "TalentAlign AI"
    }
  }
}